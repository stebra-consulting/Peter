@using testPeterWeb.Models
@using testPeterWeb.App_Start
@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

@foreach (var item in (List<News>)ViewData["MyNews"])
{
        <div class="col-md-6" style="float:none">
            <h2>
                @item.Title
            </h2>
            <b>
                @Html.Raw(item.Body)
            </b>
            <p>@Html.ActionLink("Link to Article", "Item", new { title = URLFriendly.GetURLFriendly(item.Title) })</p>
        </div>
}
